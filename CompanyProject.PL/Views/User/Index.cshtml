@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if(Model.Count()>0)
{
    <div class="mt-5">
        <form asp-action="Index" class="row offset-2">
            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="User Name">
            </div>
            <div class="col-4">
                <input class="btn btn-success" type="submit" value="Search">
            </div>

        </form>

    </div>
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U=>U.Id)</td>
                <td>@Html.DisplayNameFor(U=>U.Fname)</td>
                <td>@Html.DisplayNameFor(U=>U.Lname)</td>
                <td>@Html.DisplayNameFor(U=>U.Email)</td>
                <td>@Html.DisplayNameFor(U=>U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U=>U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.Fname</td>
                    <td>@User.Lname</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join("," ,User.Roles)</td>
                    <partial name="_ButtonsPartialView" model="@User.Id">
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div>
        <h1> There Is No Users </h1>
    </div>
}

