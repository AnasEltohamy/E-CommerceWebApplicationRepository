@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure to delete @Model.Name Department</h1>
<div asp-validation-summary="All"></div>
<form asp-action="Delete">
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input readonly class="form-control" asp-for="Code" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input readonly class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DataOfCreation"></label>
        <input readonly class="form-control" asp-for="DataOfCreation" />
    </div>
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Cancle</a>
</form>

